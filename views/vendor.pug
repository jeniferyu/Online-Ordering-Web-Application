html
    head
        script(type='text/javascript', src='/js/updatevendor.js')
        title Vendor #{vendor.id}
body
    include ./headers
    
    div
        h1 Vendor ID: 
            span#vendorID #{vendor.id}
        h2 Basic Information (You could modify them if you wish):
        label(for = 'name') Name:  
        input(type = 'textbox', id = 'curVendorName', value = `${vendor.name}`)
        br
        br
        label(for = 'delivery') Delivery fee:  
        input(type = 'textbox', id = 'curVendorDeliveryFee', value = `${vendor.delivery_fee}`)
        br
        br
        label(for = 'minimum') Minimum order:  
        input(type = 'textbox', id = 'curVendorMinimum', value = `${vendor.min_order}`)
        br
        div#supplies
            h2 Supplies:
            each supply, supplyKey in vendor.supplies
                div.category
                    h3 #{supplyKey}:
                    each item, itemKey in supply
                        div.item
                            p item ID: #{itemKey}
                            p item name: #{item.name}
                            p item description: #{item.description}
                            p item price: #{item.price}
                            p item stock: #{item.stock}
                        br
        
        div 
            h3 Add New Item to Category:
            label Select Category: 
            select(name="category-select" id="category-select")
                each supply,supplyKey in vendor.supplies
                    option(value = `${supplyKey}`) #{supplyKey}
            br
            br
            label(for = 'itemName') Item Name: 
            input(type = 'textbox', id = 'itemName')
            br
            br
            label(for = 'itemDescription') Item Description: 
            input(type = 'textbox', id = 'itemDescription')
            br
            br
            label(for = 'itemPrice') Item Price: 
            input(type = 'textbox', id = 'itemPrice')
            br
            br
            label(for = 'itemStock') Item Stock: 
            input(type = "textbox", id = "itemStock")
            br
            br
            button#addNewItem Add Item        
               
    br
    button#update Save Changes